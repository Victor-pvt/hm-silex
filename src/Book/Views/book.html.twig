{% extends "layout.html.twig" %}

{% block body %}
    <h1>Отзыв</h1>

    <div class="row form-group">
        <label class="col-sm-2">Дата публикации
        </label>

        <div class="col-sm-5">
            {{ book.publicationAt|date('Y-m-d H:i') }}
        </div>
    </div>
    <div class="row form-group">
        <label class="col-sm-2">Имя автора
        </label>

        <div class="col-sm-5">
            {{ book.authorName }}
        </div>
    </div>
    <div class="row form-group">
        <label class="col-sm-2">IP адрес автора
        </label>

        <div class="col-sm-5">
            {{ book.authorIp }}
        </div>
    </div>
    <div class="row form-group">
        <label class="col-sm-2">Текст отзыва
        </label>

        <div class="col-sm-5">
            {{ book.message }}
        </div>
    </div>
    <div class="row form-group">
        <label class="col-sm-2">Кол-во лайков
        </label>

        <div class="col-sm-5">
            {{ book.likesCount }}
        </div>
    </div>
    <div class="row form-group">
        <label class="col-sm-2">
            {% if prev | length >0 %}
            <td><a href="{{ path('show', { id: prev.id }) }}"><<< {{ prev.id }}</a>
                {% endif %}
        </label>
        <label class="col-sm-2">
            {% if next|length>0 %}
            <td><a href="{{ path('show', { id: next.id }) }}">>>> {{ next.id }}</a>
                {% endif %}
        </label>
    </div>

{% endblock body %}